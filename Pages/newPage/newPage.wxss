.banenr-container{
  width:100%;
  background:#F0F0F0;
}
.banner-swiper{
  width:100%;
  transform: translateZ(0);
}
.banner-swiper swiper-item{
  width:100%;
}
.banner-swiper swiper-item image{
  display:block;
  width:100%;
  height:350rpx;
}
.content-detail{
  box-sizing:border-box;
  padding:10px;
  background:#fff;
}
.detail-title{
  display:flex;
  align-items:center;
  font-size:25rpx;
  color:#ccc;
}
.user-logo{
  width:50rpx;
  height:50rpx;
  border-radius:100%;
}
.user-name{
  margin:0 5px;

}
.content-title{
  margin:10px 0;
}
.user-img{
  width:100%;
  height:320rpx;
}
.love-detail{
  width:100%;
  display:flex;
  margin-top:5px;
  text-indent: 65rpx;
  text-align: left;
  font-size:29rpx;
  letter-spacing: 3rpx;
  color: #6b6666;
}
.changeFont{
  font-size:30rpx;
  color:#28FF28;
}
.changeSmall{
  font-size:26rpx;
  margin-right:50rpx;
  margin-left:8rpx;
}
.comment{
  margin:5px 0;
}
.content-detail{
  margin-top:10px;
}